name: Delete old workflow runs
on:
  schedule:
    - cron: '0 2 2 * *'
  workflow_dispatch:
# Run monthly, at 00:00 on the 1st day of month.

jobs:
  del_runs:
    runs-on: ubuntu-latest
    permissions:
      actions: write
      contents: read
    steps:
      - name: Delete workflow runs
        uses: Mattraks/delete-workflow-runs@v2
        with:
          token: ${{ github.token }}
          repository: 'ccassiau/Auto-login-netlib'
          retain_days: 30
          keep_minimum_runs: 2
